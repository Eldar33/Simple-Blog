
<% @articles.each do |article| %>
	<h2><%= article.title %></h2>

	<p>
		<%= article.text %>
	</p>
	<p>		
		<%= link_to 'show', article_path(article.id) %> | 
		<%= link_to 'edit', edit_article_path(article.id) %> |
		<%= link_to 'destroy', article_path(article), method: :delete, data: {confirm: t('articles.question_destroy')}%>
	</p>
	
	<hr>
<% end %>